                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusEvent.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventOwner.CpfCnpj)
