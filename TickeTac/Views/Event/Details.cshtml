@model TickeTac.Models.Event

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-lg-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Editar Detalhes</h4>
                        </div>
                    </div>

                    <form asp-action="Edit" method="post" class="text-center">
                        <!-- fieldsets -->
                        <fieldset>
                            <div class="form-card text-left">
                                <div class="row">
                                    <div class="col-12">
                                        <h3 class="mb-4">Informaçoes do Evento:</h3>
                                    </div>
                                </div>

                                <div class=" ml-2 row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label asp-for="Name" class="control-label"></label>
                                            <input asp-for="Name" class="form-control" disabled />
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label asp-for="Price" class="control-label"></label>
                                            <input asp-for="Price" class="form-control" disabled />
                                        </div>
                                    </div>

                                    <div class="col-md-10">
                                        <div class="form-group">
                                            <label asp-for="ContactPhone" class="control-label"></label>
                                            <input asp-for="ContactPhone" class="form-control" disabled />
                                        </div>
                                    </div>

                                    <div class="col-md-5 ">
                                        <div class="form-group">
                                            <label asp-for="EventDateBegin" class="control-label"></label>
                                            <input asp-for="EventDateBegin" class="form-control" disabled />
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label asp-for="EventDateEnd" class="control-label"></label>
                                            <input asp-for="EventDateEnd" class="form-control" disabled />
                                        </div>
                                    </div>

                                    <div class=" col-10 md-3 form-group">
                                        <label asp-for="Description"></label>
                                        <textarea asp-for="Description" class="form-control" rows="4" disabled></textarea>
                                    </div>
                                    <div class="col-md-10">
                                        <div class="form-group">
                                            <label asp-for="Image" class="control-label"></label>
                                            <input asp-for="Image" class="form-control" disabled />
                                        </div>
                                    </div>
                                    <div class="col-md-10">
                                        <div class="form-group">
                                            <label asp-for="ContactEmail" class="control-label"></label>
                                            <input asp-for="ContactEmail" class="form-control" disabled />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="CategoryId" class="control-label"></label>
                                            <input asp-for="Category.Name" class="form-control" disabled />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="StatusEventId" class="control-label"></label>
                                        <input asp-for="StatusEvent.Name" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class=" ml-2 row">
                                <div class="col-11">
                                    <H4 class="mt-3 mb-3 text-center">Localização</H4>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CityId" class="control-label"></label>
                                        <input asp-for="City.Name" class="form-control" disabled />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="StateId" class="control-label"></label>
                                        <input asp-for="State.Name" class="form-control" disabled />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Cep" class="control-label"></label>
                                        <input asp-for="Cep" class="form-control" disabled/>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label asp-for="PublicSpace" class="control-label"></label>
                                        <input asp-for="PublicSpace" class="form-control" disabled />
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label asp-for="District" class="control-label"></label>
                                        <input asp-for="District" class="form-control" disabled/>
                                    </div>
                                </div>
                                <div class="col-10  form-group">
                                    <label asp-for="MoreInfo"></label>
                                    <textarea asp-for="MoreInfo" class="form-control" rows="4" disabled></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <a asp-action="Edit" asp-route-id="@Model?.Id" class="mt-3 btn btn-primary action-button float-right" >Editar</a>
                            </div>
                            <a asp-action="Index" class="btn float-left btn-primary">Voltar para tabela</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

