@model TickeTac.ViewModels.EventOwnerViewModel
@{
    ViewData["Title"] = "Organizador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    
   

<div class=breadcrumbs>
    <div class=container>
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class=breadcrumbs-content>
                    <h1 class=page-title>Avaliações de @Model.Owner.Name</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class=breadcrumb-nav>
                    <li><a href="javascript: history.go(-1)">Detalhes</a></li>
                    <li>Outros Eventos</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<section class="dashboard section">
    <div class=container>
        <div class=row>
            <div class="col-lg-3 col-md-12 col-12">

                <div class=dashboard-sidebar>
                    <div class=user-image>
                        <img class="rounded-circle" src="@Model.Owner.ProfilePicture" alt="Imagem do organizador">
                        
                        <h3>@Model.Owner.Name</h3>
                    </div>
                    <div class=dashboard-menu>
                        <ul>

                            <li><a class=active asp-action="Organizador" asp-controller="Home"><i
                                        class="lni lni-bolt-alt"></i>Todas as avaliações</a>
                            </li>

                        </ul>
                        
                    </div>
                    
                </div>

                <div class="button mt-3 d-flex align-items-center justify-content-center">
                            <button type="submit" onclick="window.history.back()" class="btn">Voltar</button>
                </div>

            </div>
            <div class="col-lg-9 col-md-12 col-12">
                <div class=main-content>
                    <div class="dashboard-block mt-0">
                        <h3 class=block-title>Avaliações de @Model.Owner.Name</h3>

                        <div class=my-items>

                            @* fazer FOR para os eventos abaixo *@

                            @foreach (var review in Model.ReviewReceived.OrderByDescending(rr => rr.Id))
                            {
                            <div class="single-block comments">
                                <h3></h3>
                                <div class=single-comment>
                                <img src="@review.User.ProfilePicture" alt="FOTO DO AVALIADOR">
                                <div class="content">
                                    <h4>@review.User.Name</h4>
                                    <span>@review.ReviewDate.ToString("dd/MM/yyyy")</span>
                                    <p>
                                    @review.ReviewText
                                    </p>
                                </div>
                                </div>
                            </div>
                            }

                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</section>


