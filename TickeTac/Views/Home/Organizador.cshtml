@model TickeTac.ViewModels.EventOwnerViewModel
@{
    ViewData["Title"] = "Organizador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    
   

<div class=breadcrumbs>
    <div class=container>
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class=breadcrumbs-content>
                    <h1 class=page-title>Mais eventos de @Model.Owner.Name</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class=breadcrumb-nav>
                    <li><a href="javascript: history.go(-1)">Detalhes</a></li>
                    <li>Outros Eventos</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<section class="dashboard section">
    <div class=container>
        <div class=row>
            <div class="col-lg-3 col-md-12 col-12">

                <div class=dashboard-sidebar>
                    <div class=user-image>
                        <img class="rounded-circle" src="@Model.Owner.ProfilePicture" alt="Imagem do organizador">
                        
                        <h3>@Model.Owner.Name</h3>
                    </div>
                    <div class=dashboard-menu>
                        <ul>

                            <li><a class=active asp-action="Organizador" asp-controller="Home"><i
                                        class="lni lni-bolt-alt"></i> Eventos publicados</a>
                            </li>

                        </ul>
                        
                    </div>
                    
                </div>

                <div class="button mt-3 d-flex align-items-center justify-content-center">
                            <button type="submit" onclick="window.history.back()" class="btn">Voltar</button>
                </div>

            </div>
            <div class="col-lg-9 col-md-12 col-12">
                <div class=main-content>
                    <div class="dashboard-block mt-0">
                        <h3 class=block-title>Eventos de @Model.Owner.Name</h3>
                        <nav class=list-nav>
                            <ul>
                                <li class=active><a href="javascript:void(0)">Todos <span>42</span></a></li>
                                <li><a href="javascript:void(0)">Confirmados <span>88</span></a></li>
                                <li><a href="javascript:void(0)">Em andamento <span>12</span></a></li>
                                <li><a href="javascript:void(0)">Conclu√≠dos <span>02</span></a></li>
                                <li><a href="javascript:void(0)">Cancelados <span>45</span></a></li>
                            </ul>
                        </nav>

                        <div class=my-items>

                            <div class=item-list-title>
                                <div class="row align-items-center">
                                    <div class="col-lg-5 col-md-5 col-12">
                                        <p>Nome</p>
                                    </div>
                                    <div class="col-lg-2 col-md-2 col-12">
                                        <p>Categoria</p>
                                    </div>
                                    <div class="col-lg-2 col-md-2 col-12">
                                        <p>Status</p>
                                    </div>
                                </div>
                            </div>

                            @* fazer FOR para os eventos abaixo *@

                            @foreach (var events in Model.Events)
                        {
                            <div class=single-item-list>
                                <div class="row align-items-center">
                                    <div class="col-lg-5 col-md-5 col-12">
                                        <div class=item-image>
                                            <img src="@events.Image"
                                                alt="IMAGEM DO EVENTO">
                                            <div class=content>
                                                <h3 class=title><a href="javascript:void(0)">@events.Name</a></h3>
                                                <span class=price>R$ @events.Price</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-2 col-12">
                                        <p>@events.Category.Name</p>
                                    </div>
                                    <div class="col-lg-2 col-md-2 col-12">
                                        <p>@events.StatusEvent.Name</p>
                                    </div>

                                </div>

                            </div>
                        }


                            



                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</section>


