@model TickeTac.Models.AppUser
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Publicar eventos";
    var usuario = await UserManager.FindByEmailAsync(@User.Identity?.Name);
}
<div class=breadcrumbs>
    <div class=container>
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class=breadcrumbs-content>
                    <h1 class=page-title>Publicar eventos</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class=breadcrumb-nav>
                    <li><a href=index.html>Home</a></li>
                    <li>Postar evento</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<section class="dashboard section">
    <div class=container>
        <div class=row>
            <div class="col-lg-3 col-md-4 col-12">

                <div class=dashboard-sidebar>
                    <div class=user-image>
                        <img src="@usuario.ProfilePicture" alt="#">
                        <h3>@usuario.Name</h3>
                    </div>
                    <div class=dashboard-menu>
                        <ul>
                            <li><a class=active asp-action="Index" asp-controller="User"><i class="lni lni-pencil-alt"></i> Editar Perfil</a>
                            </li>
                            <li><a asp-action="MeusEventos" asp-controller="User"><i class="lni lni-bolt-alt"></i> Meus eventos</a>
                            </li>
                            <li><a asp-action="Publicar" asp-controller="User"><i class="lni lni-circle-plus"></i>Publicar evento</a>
                            </li>
                        </ul>
                        <div class=button>

                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                                asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="nav-link btn btn-link text-dark">Sair</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-md-8 col-12">
                <div class=main-content>

                    <div class="dashboard-block mt-0">
                        <h3 class=block-title>Publicar Evento</h3>
                        <div class=inner-block>
                            <div class=post-ad-tab>
                                <form class=default-form-style method=post action="#">
                                    <div class=row>
                                        <div class=col-12>
                                            <div class=form-group>
                                                <label>Titulo*</label>
                                                <input name=title type=text placeholder="Enter Title">
                                            </div>
                                        </div>
                                        <div class=col-12>
                                            <div class=form-group>
                                                <label>Categoria*</label>
                                                <div class=selector-head>
                                                    <span class=arrow><i class="lni lni-chevron-down"></i></span>
                                                    <select class=user-chosen-select>
                                                        <option value=none>Select a Category</option>
                                                        <option value=none>Mobile Phones</option>
                                                        <option value=none>Electronics</option>
                                                        <option value=none>Computers</option>
                                                        <option value=none>Headphones</option>
                                                        <option value=none>Furnitures</option>
                                                        <option value=none>Books</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class=row>
                                        <div class=col-12>
                                            <div class=form-group>
                                                <label>Add Preco*</label>
                                                <input name=price type=text placeholder="Enter Price">
                                            </div>
                                        </div>
                                        <div class=col-12>
                                            <div class=form-group>
                                                <label>Add E-Mail para contato*</label>
                                                <input name=price type=text placeholder="Enter Price">
                                            </div>
                                        </div>
                                        <div class=col-12>
                                            <div class=form-group>
                                                <label>Telefone para contato*</label>
                                                <input name=price type=text placeholder="Enter Price">
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-12">
                                            <div class=form-group>
                                                <label>Inicio*</label>
                                                <input name=name type=text placeholder="Enter your name">
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-12">
                                            <div class=form-group>
                                                <label>Fim*</label>
                                                <input name=name type=text placeholder="Enter your name">
                                            </div>
                                        </div>
                                        <div class=col-12>
                                        </div>
                                        <div class="col-lg-6 col-12">
                                            <div class=upload-input>
                                                <input type=file id=upload name=upload>
                                                <label for=upload class="text-center content">
                                                </label>
                                            </div>
                                        </div>
                                        <div class=col-12>
                                            <div class="form-group mt-30">
                                                <label>Descrição*</label>
                                                <textarea name=message placeholder="Input ad description"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class=row>
                                        <div class="col-lg-6 col-12">
                                            <div class=form-group>
                                                <label>Cidade</label>
                                                <input name=number type=text placeholder="Cidade">
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-12">
                                            <div class=form-group>
                                                <label>Estado*</label>
                                                <input name=number type=text placeholder="Enter mobile number">
                                            </div>
                                        </div>

                                        <div class=col-12>
                                            <div class=form-group>
                                                <label>Logradouro</label>
                                                <input name=address type=text placeholder="Defina um logradouro">
                                            </div>
                                        </div>
                                        <div class=col-12>
                                            <div class=form-check>
                                                <input class=form-check-input type=checkbox value=""
                                                    id=flexCheckDefault>
                                                <label class=form-check-label for=flexCheckDefault>
                                                    I agree to all Terms of Use & Posting Rules
                                                </label>
                                            </div>
                                            <div class="form-group button mb-0 mt-15">
                                                <button type=submit class="btn ">Submit Ad</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<a href="#" class="scroll-top btn-hover">
    <i class="lni lni-chevron-up"></i>
</a>
