@model TickeTac.ViewModels.EventOwnerViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Meus eventos";

}

@{
    if (User.Identity.IsAuthenticated)
    {
        var usuario = await UserManager.FindByEmailAsync(@User.Identity?.Name);
        <div class=breadcrumbs>
            <div class=container>
                <div class="row align-items-center">
                    <div class="col-lg-6 col-md-6 col-12">
                        <div class=breadcrumbs-content>
                            <h1 class=page-title>Meus Eventos</h1>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-12">
                        <ul class=breadcrumb-nav>
                            <li><a href=index.html>Home</a></li>
                            <li>Meus Eventos</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>


        <section class="dashboard section">
            <div class=container>
                <div class=row>
                    <div class="col-lg-3 col-md-12 col-12">

                        <div class=dashboard-sidebar>
                            <div class=user-image>
                                <img src="@usuario.ProfilePicture" alt="#">
                                <h3>@usuario.Name</h3>
                            </div>
                            <div class=dashboard-menu>
                                <ul>
                                    <li><a asp-action="Index" asp-controller="User"><i class="lni lni-pencil-alt"></i> Editar
                                            Perfil</a>
                                    </li>
                                    <li><a class=active asp-action="MeusEventos" asp-controller="User"><i
                                            class="lni lni-bolt-alt"></i> Meus
                                            eventos</a>
                                    </li>
                                    <li><a asp-action="Publicar" asp-controller="User"><i class="lni lni-circle-plus"></i>
                                            Publicar
                                            evento</a>
                                    </li>
                                </ul>
                                <div class=button>

                                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                                asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button type="submit" class="nav-link btn btn-link text-dark">Sair</button>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-9 col-md-12 col-12">
                        <div class=main-content>
                            <div class="dashboard-block mt-0">
                                <h3 class=block-title>Meus eventos</h3>
                                <nav class=list-nav>
                                    <ul>
                                        <li class=active><a href="javascript:void(0)">Todos</a></li>
                                        <li><a href="javascript:void(0)">Confirmados</a></li>
                                        <li><a href="javascript:void(0)">Em andamento</a></li>
                                        <li><a href="javascript:void(0)">Concluídos</a></li>
                                        <li><a href="javascript:void(0)">Cancelados</a></li>
                                    </ul>
                                </nav>

                                <div class=my-items>

                                    <div class=item-list-title>
                                        <div class="row align-items-center">
                                            <div class="col-lg-5 col-md-5 col-12">
                                                <p></p>
                                            </div>
                                            <div class="col-lg-2 col-md-2 col-12">
                                                <p>Categoria</p>
                                            </div>
                                            <div class="col-lg-2 col-md-2 col-12">
                                                <p>Status</p>
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-12 align-right">
                                                <p>Ações</p>
                                            </div>
                                        </div>
                                    </div>

                                    @* fazer FOR para os eventos abaixo *@
                                @if (@usuario.EhOwner == false)
                                    {
                                        <div class=single-item-list>
                                            <div class="row align-items-center">
                                                <div class="col-lg-5 col-md-5 col-12">
                                                    <div class=content>
                                                            
                                                            <span class=price>Nenhum evento encontrado. <a asp-action="Publicar" asp-controller="User">Publique agora!</a></span>
                                                        </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else {
                                        @foreach (var events in Model.Events)
                                        {
                                        <div class=single-item-list>
                                            <div class="row align-items-center">
                                                <div class="col-lg-5 col-md-5 col-12">
                                                    <div class=item-image>
                                                        <img src="@events.Image" alt="IMAGEM DO EVENTO">
                                                        <div class=content>
                                                            <h3 class=title><a href="javascript:void(0)">@events.Name</a></h3>
                                                            <span class=price>R$ @events.Price</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-12">
                                                    <p>@events.Category.Name</p>
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-12">
                                                    <p>@events.StatusEvent.Name</p>
                                                </div>

                                            </div>

                                        </div>
                                        }
                                    }
        
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
    else
    {
        <h1 class="text-danger">@ViewData["Title"]</h1>

        <div class=preloader>
            <div class=preloader-inner>
                <div class=preloader-icon>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>


        <div class=error-area>
            <div class=d-table>
                <div class=d-table-cell>
                    <div class=container>
                        <div class=error-content>

                            <h2>ERRO!</h2>
                            <p>Você precisa estar em uma conta.</p>
                            <div class=button>
                                <a asp-action="Index" asp-controller="Home" class="btn">Voltar para página inicial</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
